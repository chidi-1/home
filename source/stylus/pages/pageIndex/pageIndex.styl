.index--slider
  align-items stretch

  .one-third:nth-child(2)
    background $cGray_l

  .slider-action
    position relative

    .owl-nav
      div
        position absolute
        top 210px
        transition all 0.2s ease-in-out
        z-index 30
        width 43px
        height 80px
        background $cGray_m

        &:after
          position absolute
          content ""
          width 14px
          height 26px
          top 50%
          margin-top -12px
          left 50%
          margin-left -7px
          opacity 0.8

        &:hover
          &:after
            opacity 1

        &.owl-prev
          left 0
          border-radius 0 40px 40px 0

          &:after
            background url("../img/icon--left-green.png")
            margin-left -12px

        &.owl-next
          right 0
          border-radius 40px 0 0 40px

          &:after
            background url("../img/icon--right-green.png")
            margin-left -4px

    &--el
      display block
      text-align center
      padding 52px 80px 0
      overflow hidden

      &-title
        display block
        font-size 15px
        font-weight bold
        margin-bottom 62px

      .countdown
        display block
        text-align center
        margin-bottom 43px

        &--el
          display inline-block
          vertical-align top
          width 55px
          margin 0 3px
          position relative

          &:after
            position absolute
            content ":"
            color #ede1c9
            font-size 30px
            font-weight bold
            right -8px
            top -3px

          &:last-child:after
            display none

          span.number
            display block
            font-size 30px
            font-weight bold
            color $cWhite
            margin-bottom 15px

          span.text
            display block
            font-size 12px
            color $cWhite

  .img-wrap
    display block
    height 240px
    overflow hidden
    text-align center

    img
      min-width 100%
      min-height 100%
      transform scale(1)
      transition all 0.2s ease-in-out

    &:hover
      img
        transform scale(1.1)

.profit
  &-top
    display block
    background $cGray_l url("../img/icon--horn.png") no-repeat 65px 46%
    padding 43px 25px 41px 236px

  span
    display block
    margin-bottom 18px

    strong
      font-weight bold

  p
    display block

  .profit-bottom
    display block
    background $cGray_l
    padding 17px 15px 19px 119px
    height 99px

    span
      margin-bottom 9px
      
  .profit-bottom-1
    background $cGray_l url("../img/icon--step-1.png") no-repeat 18px 50%
  .profit-bottom-2
    background $cGray_l url("../img/icon--step-2.png") no-repeat 21px 50%
  .profit-bottom-3
    background $cGray_l url("../img/icon--step-3.png") no-repeat 27px 50%
  .profit-bottom-4
    background $cGray_l url("../img/icon--step-4.png") no-repeat 33px 50%

  a.fancy
    display block
    height 214px

  .profit-list
    margin-left -20px

    li
      display inline-block
      vertical-align top
      margin-left 20px
      margin-bottom 20px

      a
        display block
        height 137px
        overflow hidden
        position relative
        line-height 0

        img
          min-width 100%
          min-height 100%
          transform scale(1)
          transition all 0.2s ease-in-out
          position relative
          z-index 5

        &:hover
          img
            transform scale(1.1)

        span
          display block
          position absolute
          z-index 10
          left 0
          bottom -18px
          right 0
          padding 10px 0
          font-weight bold
          color  $cWhite
          line-height 18px
          text-align center
          background rgba(59, 52, 51, 0.8)
          pointer-events none

      &.all
        span
          color #a29593
          left 0
          top 0
          right 0
          bottom -18px
          text-transform uppercase
          display flex
          align-items center
          justify-content center

  .tabs
    &--caption
      height 48px
      overflow hidden

      li
        display inline-block
        vertical-align top
        width 34%
        border-right 1px solid $cWhite
        text-align center
        height 48px
        background $cGray_d
        color $cWhite
        padding-top 5px
        margin-top 2px
        cursor pointer

        &:last-child
          border-right none

        &.active
          cursor default
          background $cGray_m
          margin-top 0

    &--content
      display none

      &.active
        display block

      a
        display block
        line-height 0
        height 290px
        overflow hidden

        img
          min-width 100%
          min-height 100%
          transform scale(1)
          transition all 0.2s ease-in-out

        &:hover
          img
            transform scale(1.1)

      &-text
        background $cGray_m
        height 112px
        padding 0 50px
        justify-content  flex-start

        span
          color $cWhite
          margin-bottom 0
          display block

.clients
  &-info
    padding 27px 20px 20px 0
    background $cGray_l
    align-items stretch

    &-left
      display inline-block
      vertical-align top
      width 215px
      position relative
      font-weight bold
      font-size 15px
      text-transform uppercase
      text-align center
      padding 0 50px
      color $cGray_m

      &:after
        position absolute
        content ""
        right 0
        width 1px
        background $cWhite
        top 15px
        bottom 8px

    &-right
      display inline-block
      vertical-align top
      width 320px

      ul
        li
          display flex
          justify-content space-between
          align-items center
          margin-bottom 10px

          &:last-child
            margin-bottom 0

          .number
            display inline-block
            vertical-align top
            text-align center
            width 48px

            span
              color $cWhite
              display inline-block
              vertical-align top
              background $cGreen
              margin 0 auto

          p
            color $cGray_m
            display inline-block
            vertical-align top

    &:first-child
      padding 27px 20px 33px 0

      .clients-info-left
        padding-top 111px
        background url(../img/icon--statistic.png) no-repeat 48% 15px


      .clients-info-right
        ul
          li
            .number
              display inline-block
              vertical-align top
              width 50px

            p
              width 258px

            &:nth-child(1)
              span
                width 48px
                height 48px
                border-radius 48px
                text-align center
                line-height 48px

            &:nth-child(2)
              span
                width 44px
                height 44px
                border-radius 48px
                text-align center
                line-height 44px

            &:nth-child(3)
              span
                width 40px
                height 40px
                border-radius 48px
                text-align center
                line-height 40px

    &:last-child
      padding 22px 12px 12px 0

      .clients-info-left
        padding-top 15px

        &:after
          top 0

      .clients-info-right
        width 355px

        ul
          display inline-flex
          justify-content space-between

          li
            display inline-block
            vertical-align top

            .number
              display block
              text-align center
              padding-bottom 22px
              width auto

              span
                display inline-block
                vertical-align top
                margin 0 auto
                width 51px
                height 30px
                border-radius 4px
                text-align center
                line-height 30px

            p
              display block
              text-align center

  .opinion
    &-slider
      position relative
      width 590px
      height 323px

      &--el
        display inline-block
        vertical-align top

        iframe
          width 490px
          height 323px
          margin 0 50px 5px

        .text-right
          span
            display block
            font-weight bold

      .owl-nav
        div
          position absolute
          top 0
          height 323px
          width 50px
          transition all 0.2s ease-in-out
          z-index 30
          background $cGray_m
          border-top 50px solid $cGray_l
          border-bottom 50px solid $cGray_l
          border-radius 0

          &:after
            position absolute
            content ""
            width 28px
            height 53px
            top 50%
            margin-top -27px
            left 50%
            margin-left -14px
            opacity 0.8

          &:hover
            &:after
              opacity 1

          &.owl-prev
            left 0

            &:after
              background url("../img/icon--left-green-l.png")

          &.owl-next
            right 0

            &:after
              background url("../img/icon--right-green-l.png")

    h2
      display block
      margin-top 18px

.callback-form
  padding 29px 49px
  background $cGray_m

  .flex-between
    align-items center

    span.title
      display inline-block
      vertical-align top
      color $cWhite
      font-weight bold
      text-transform uppercase
      font-size 24px

    .input
      display inline-block
      vertical-align top
      margin-right 70px

      .inp
        display inline-block
        vertical-align top
        margin 0 17px
        width 224px

    .btn
      margin-top 0
      margin-right 5px
      padding 10px 28px

.vantages
  .one-half
    background $cGray_l
    display inline-flex
    justify-content space-between

    .img-wrap
      display inline-block
      vertical-align top
      overflow hidden

      img
        min-width 100%
        min-height 100%
        transform scale(1)
        transition all 0.2s ease-in-out

      &:hover
        img
          transform scale(1.1)

    .content
      display inline-block
      vertical-align top
      width 305px
      padding-top 30px

      span
        display block
        font-weight bold
        text-transform uppercase
        margin-bottom 21px
        text-align center

      ul
        margin-left 40px

        li
          position relative
          display block
          margin-bottom 6px

          &:last-child
            margin-bottom 0

          &:before
            position absolute
            content ""
            width 12px
            height 12px
            background $cGreen
            top 50%
            margin-top -5px
            left -26px

.question
  h2
    margin-bottom 28px

  &-list
    li
      display block
      margin-bottom 18px

      span
        display block
        margin-bottom 5px
        font-weight bold

      &:last-child
        margin-bottom 0

  img
    margin-top 5px
    margin-bottom 14px

  &-icons
    li
      display inline-block
      vertical-align top

      a
        display block
        width 115px
        height 100px
      
      &:nth-child(1)
        a
          background $cOrange url("../img/icon--question-1.png") no-repeat 50% 50%
      &:nth-child(2)
        a
          background $cGreen url("../img/icon--question-2.png") no-repeat 50% 50%
      &:nth-child(3)
        a
          background #605653 url("../img/icon--question-3.png") no-repeat 50% 50%



  .tabs
    &--caption
      text-align right
      margin-bottom 26px

      li
        display inline-block
        vertical-align top
        width 30px
        height 30px
        background $cGreen
        text-align center
        line-height 30px
        font-weight bold
        font-size 24px
        color $cWhite
        margin-right 2px
        margin-left 18px
        cursor pointer
        font-family $fTrebuchet

        &.active
          background #605653
          cursor default

    &--content
      display none

      &.active
        display block

      p
        margin-bottom 18px

      span
        font-weight bold
