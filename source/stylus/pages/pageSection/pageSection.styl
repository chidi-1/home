.section
  &-list
    margin-left -19px

    &--el
      margin-left 20px
      margin-bottom 11px

      &-img
        overflow hidden
        display block
        margin-bottom 10px
        position relative
        background #000000
        line-height 0

        img
          min-width 100%
          min-height 100%
          transform scale(1)
          transition all 0.2s ease-in-out

        &:hover
          img
            transform scale(1.1)

      &-title
        position absolute
        left 0
        right 0
        bottom 0
        padding 13px 0 17px
        z-index 5
        color $cWhite
        font-size 20px
        line-height 20px
        font-weight bold
        text-align center
        font-family $fTrebuchet
        background rgba(59,52,51,0.7)

      &-price
        position absolute
        right 0
        top 20px
        padding 5px 12px
        z-index 5
        color $cWhite
        font-size 14px
        line-height 18px
        text-align center
        font-family $frebuchet
        border-radius 5px 0 0 5px
        background rgba(59,52,51,0.7)