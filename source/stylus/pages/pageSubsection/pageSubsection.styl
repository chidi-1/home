.subsection
  &-list
    margin-left -19px

    &--el
      margin-left 17px
      margin-bottom 56px

      &-img
        overflow hidden
        display block
        margin-bottom 10px

        img
          min-width 100%
          min-height 100%
          transform scale(1)
          transition all 0.2s ease-in-out

        &:hover
          img
            transform scale(1.1)

      .content
        .flex-between:first-child
          align-items center
          border-bottom 1px dashed $cGray_m
          padding-bottom 9px
          margin-bottom 17px

      &-params
        display inline-block
        vertical-align top

        span
          display block
          color $cGray_m
          font-size 16px
          line-height 26px
          font-weight bold

      &-price
        display inline-block
        vertical-align top
        font-size 20px
        font-weight bold
        color $cOrange

      &-stars
        .star
          margin-bottom 5px

        span
          display block
          font-size 12px
          color $cGray_m

      .btn
        border-radius 0
        font-size 12px
        padding 8px 25px



