.articles-list
  margin-left -21px

  li
    margin-left 20px
    margin-bottom 55px

    a
      color $cGreen

      span.title
        color $cGreen

      &:hover
        span.title
          color $cGreen + #111111

        p
          color $cBlack + #111111

    span
      color $cGray_m

    .title
      display block
      margin-bottom 15px
      font-weight bold
      font-size 16px

article
  p
    margin-bottom 20px

    a
      color $cGreen

  .one-half
    img
      max-width 100%

  img.img-center
    display block
    margin-left auto
    margin-right auto
    max-width 900px

  ul
    li
      display block
      margin-bottom 10px
      position relative
      padding-left 50px

      &:before
        position absolute
        content ""
        width 30px
        height 30px
        border-radius 30px
        background $cGray_l url(../img/icon--right-gray.png) no-repeat 50% 50%
        left 0
        top -6px

  ol
    counter-reset myCounter

    li
      display block
      margin-bottom 10px
      position relative
      padding-left 50px

      &:before
        position absolute
        counter-increment myCounter
        content counter(myCounter)
        width 30px
        height 30px
        border-radius 30px
        background $cGray_l
        line-height 30px
        text-align center
        color $cGray_m
        left 0
        top -6px

  .btn.btn-border
    padding 8px 34px