
html *
  max-height 999999px //android font-size fix
  -webkit-font-smoothing antialiased
  box-sizing border-box

html
body
  margin 0
  padding 0
  width 100%
  height 100%
  min-width 320px

body
  font-family $fTahoma
  font-size 14px
  line-height 18px
  color $cBlack
  min-height 100%
  height 100%
  position relative
  -webkit-text-size-adjust 100% // ios font-size fix
  background #ece9e4

.page-wrap
  min-height 100%
  position relative
  min-width 320px
  overflow hidden

form,
p,
ul, ol,
dl, dt, dd,
h1, h2, h3, h4, h5, h6
  margin 0 
  padding 0 
  font-weight normal 
  list-style none 


/***** ie fix ****/
a img
  border none

a
  outline none
  text-decoration none

/*.rubl
  font-family 'als_rublregular'
  font-weight normal
  font-style normal  */

.clear
  clear both
  font-size 0
  line-height 0
  height 0

.clearfix:after
.section:after
  content "" 
  display table 
  clear both 

// .section

.pull-right
  float right

.pull-left
  float left

.text-center
  text-align center

.text-right
  text-align right
   
.section
  position relative

.flex-between
  display flex !important

.flex-between
  display flex !important
  justify-content  space-between
  align-items flex-start

.flex-center
  align-items center
  
.width-wrap
  display block
  max-width 1280px
  padding 0 40px
  margin 0 auto

// отступы между горизонтальными li
ol, ul, .grid
  list-style none 
  font-size 0
  line-height 0
  letter-spacing -1px


li, .grid-item
  line-height normal
  letter-spacing normal
  display inline-block
  vertical-align top 
  zoom 1

.hidden-block
  display none !important

